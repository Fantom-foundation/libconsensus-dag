root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.go]
indent_style = tab
tab_width = 4

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[*.rs]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[.sh]
indent_style = space
indent_size = 2
